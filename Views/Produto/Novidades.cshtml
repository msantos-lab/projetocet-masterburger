@model List<Produto>

@{
  ViewData["Title"] = "Novidades";
}

<div class="container mt-6">
  <div class="row d-flex">
    <div class="pb-5 title-destaq col">
      <h2>@ViewData["Title"]</h2>
    </div>
  </div>

  <section class="home-products-intro" style="margin: 0; padding: 0; border: none">
    <div class="row row-sm">
      <div class="row" id="productsContainer">
        @foreach (var produto in Model.Where(p => p.IsDisponivel)) {
          <partial name="_ListagemProdutos" for="@produto" />
        }
      </div>
    </div>
    <div class="row mt-4">
      <div class="col">
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center" id="paginacao">
          </ul>
        </nav>
      </div>
    </div>
  </section>
</div>
