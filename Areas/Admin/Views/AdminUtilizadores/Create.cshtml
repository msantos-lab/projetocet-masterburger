@using MasterBurger.Areas.Admin.Views.ViewsModels;
@model UtilizadorViewModel

@{
	ViewData["Title"] = "Novo Utilizador";
}

<div class="card">
	<div class="d-md-flex justify-content-between mb-3">
		<div class="mb-3 mb-md-0 title-pg">
			<h2>@ViewData["Title"]</h2>
		</div>
	</div>

	<div class="row">
		<div class="col-md-4">
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Email">Email*:</label>
					<input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Password">Palavra-passe*:</label>
					<input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="ConfirmPassword">Confirme a Palavra-passe*:</label>
					<input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>
				<div class="form-group mb-5" style="width:200px;">
					<label for="SelectedRole">Perfil: </label>
					<select asp-for="SelectedRole" asp-items="new SelectList(Model.AllRoles)">
						<option selected>---</option>
					</select>
				</div>

				<input type="submit" value="Salvar" class="btn btn-primary" />
				<a asp-action="Index" class="btn btn-primary">Voltar</a>
			</form>
		</div>
	</div>
</div>