<!DOCTYPE html>
<html lang="pt-Pt">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>@ViewData["Title"]  - MasterBurger</title>
	<!-- base:css -->

	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
	<script src="https://cdn.tiny.cloud/1/t3sa6gxlsa5nogtdgp1dowsbpsbdwbp9matkos5odymkhygd/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

	<link rel="stylesheet" href="~/dashboard/vendors/mdi/css/materialdesignicons.min.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/dashboard/vendors/base/vendor.bundle.base.css" asp-append-version="true" />
	<!-- endinject -->
	<!-- plugin css for this page -->
	<!-- End plugin css for this page -->
	<!-- inject:css -->
	<link rel="stylesheet" href="~/dashboard/css/style.css" asp-append-version="true" />
	<!-- endinject -->
	<link rel="shortcut icon" href="~/dashboard/images/favicon.ico" />
</head>
<body>
	<div class="container-scroller">

		<!-- partial:partials/_horizontal-navbar.html -->
		<div class="horizontal-menu">
			<nav class="navbar top-navbar col-lg-12 col-12 p-0">
				<div class="container-fluid" style="width: 90%;">
					<div class="navbar-menu-wrapper d-flex align-items-center justify-content-between">
						<div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">

							@if (User.IsInRole("Admin")) {
								<a class="navbar-brand brand-logo" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
									<img src="~/dashboard/images/logo_dashboard.svg" alt="logo" width="170" />
								</a>
							} else if (User.IsInRole("Cozinha")) {
								<a class="navbar-brand brand-logo" asp-area="Admin" asp-controller="AdminCozinha" asp-action="Index">
									<img src="~/dashboard/images/logo_dashboard.svg" alt="logo" width="170" />
								</a>
							} else if (User.IsInRole("Entrega")) {
								<a class="navbar-brand brand-logo" asp-area="Admin" asp-controller="AdminEntrega" asp-action="Index">
									<img src="~/dashboard/images/logo_dashboard.svg" alt="logo" width="170" />
								</a>
							}

						</div>
						@if (User.IsInRole("Admin")) {
							<button class="navbar-toggler navbar-toggler-right d-xl-none align-self-center d-print-none" type="button" data-toggle="horizontal-menu-toggle">
								<span class="mdi mdi-menu"></span>
							</button>
						}
					</div>
				</div>
			</nav>
			@if (User.IsInRole("Admin")) {
				<partial name="_Menu" />
			}
		</div>
	</div>
	<!-- partial -->

	<div class="container-fluid page-body-wrapper">
		<div class="main-panel">
			<div class="content-wrapper">
				@RenderBody()

			</div>
		</div>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

	<script src="~/dashboard/vendors/base/vendor.bundle.base.js"></script>
	<!-- endinject -->
	<!-- Plugin js for this page-->
	<!-- End plugin js for this page-->
	<!-- inject:js -->
	<script src="~/dashboard/js/template.js"></script>
	<!-- endinject -->
	<!-- plugin js for this page -->
	<!-- End plugin js for this page -->
	<script src="~/dashboard/vendors/chart.js/Chart.min.js"></script>
	<script src="~/dashboard/vendors/progressbar.js/progressbar.min.js"></script>
	<script src="~/dashboard/vendors/chartjs-plugin-datalabels/chartjs-plugin-datalabels.js"></script>
	<script src="~/dashboard/vendors/justgage/raphael-2.1.4.min.js"></script>
	<script src="~/dashboard/vendors/justgage/justgage.js"></script>
	<script src="~/dashboard/js/jquery.cookie.js" type="text/javascript"></script>
	<!-- Custom js for this page-->
	<script src="~/dashboard/js/dashboard.js"></script>
	<!-- End custom js for this page-->
	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>