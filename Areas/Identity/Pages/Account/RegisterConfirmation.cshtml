@page
@model RegisterConfirmationModel
@{
  ViewData["Title"] = "Confirmação de Registo";
}

<div class="container mt-6">
  <div class="row">
    <div class="d-flex justify-content-center text-uppercase">
      <h2>@ViewData["Title"]</h2>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-4">
      @{
        if (@Model.DisplayConfirmAccountLink) {
          <p>
            Verifique o seu correio eletrónico para confirmar a sua conta.
          </p>
        }
      }
    </div>
  </div>
</div>
